{
  "name": "knit-init",
  "version": "1.0.0",
  "description": "Set up a Roblox Knit project by running one single command",
  "bin": "dist/index.js",
  "scripts": {
    "start": "shx echo \"Use node dist/index.js instead\" && exit 1",
    "build": "shx rm -rf dist && tsc && shx cp -R src/template dist/",
    "dev": "shx echo \"Use ts-node src/index.ts instead\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Podter/knit-init.git"
  },
  "keywords": [],
  "author": "Podter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Podter/knit-init/issues"
  },
  "homepage": "https://github.com/Podter/knit-init#readme",
  "dependencies": {
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "nanospinner": "^1.1.0",
    "replace-in-file": "^6.3.2",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.32"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "files": [
    "dist/*.js",
    "dist/**/*.js",
    "dist/template/**"
  ]
}
